<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="DrawerTheme" parent="MaterialDrawerTheme.Light">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <style name="AppPreference.DialogPreference">
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>
</resources>